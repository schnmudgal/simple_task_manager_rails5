<%= form_for @task, :html => { :class => "form-horizontal task" } do |f| %>

  <% if @task.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
      <%= f.error_span(:description) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :start, {}, style: 'width: auto; display: inline-block;', :class => 'form-control' %>
      <%= f.error_span(:start) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :end, {}, style: 'width: auto; display: inline-block;', :class => 'form-control' %>
      <%= f.error_span(:end) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, 'User', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :user_id, User.pluck(:email, :id), { prompt: '--Select--' }, :class => 'form-control' %>
      <%= f.error_span(:end) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
